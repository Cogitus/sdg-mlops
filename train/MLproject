name: training
conda_env: conda.yml

entry_points:
  main:
    parameters:
      tensorflow_datasets:
        type: str
        default: cogitus/sdg-onu/tensorflow_datasets:latest

      output_sequence_length:
        type: int
        default: 70

      optimizer:
        type: str
        default: RMSprop

      units:
        type: int
        default: 70

      dropout:
        type: float
        default: 0.3

      n_hidden:
        type: int
        default: 1

      epochs:
        type: int
        default: 5

      initial_learning_rate:
        type: float
        default: 0.01

      decay_steps:
        description: Nummber of steps per epoch
        type: int
        default: 6309

      rate:
        type: int
        default: 2

    command: >-
      python3 run.py  --tensorflow_datasets {tensorflow_datasets} \
                    --output_sequence_length {output_sequence_length} \
                    --optimizer {optimizer} \
                    --units {units} \
                    --dropout {dropout} \
                    --n_hidden {n_hidden} \
                    --epochs {epochs} \
                    --initial_learning_rate {initial_learning_rate} \
                    --decay_steps {decay_steps} \
                    --rate {rate}
