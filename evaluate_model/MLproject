name: evaluate_model
conda_env: conda.yml

entry_points:
  download_language_models:
    command: >-
      python3 download_spacy_model.py

  main:
    parameters:
      model_tag:
        description: >
          Fully-qualified path to W&B for the tensorflow model folder (default
          format for saving of tensorflow)
        type: str
        default: cogitus/sdg-onu/RNN_standard:best

      input_data_tag:
        description: >
          Fully-qualified path to W&B for the translated-to-english text inputs for the 
          papers titles
        type: str
        default: cogitus/sdg-onu/titles_en.json:latest

    command: >-
      python3 run.py --model_tag {model_tag} \
                    --input_data_tag {input_data_tag}
